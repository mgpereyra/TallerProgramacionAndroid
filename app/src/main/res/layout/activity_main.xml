<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/DeviceDefault.ButtonBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@android:color/holo_blue_light"
    android:padding="20dp"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/buttonVerNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28C61C"
        android:text="@string/ver_notas"
        android:textColor="#EBE8EF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <Button
        android:id="@+id/buttonCrearNuevasNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#28C61C"
        android:text="@string/crear_notas"
        android:textColor="#EBE8EF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/buttonVerNotas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonVerNotas"
        app:layout_constraintTop_toBottomOf="@+id/buttonVerNotas" />

</androidx.constraintlayout.widget.ConstraintLayout>